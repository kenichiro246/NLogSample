<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogSample.Views.MainPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="label1" Text="sample"/>
            <Button Text="Exception" Command="{Binding ButtonExceptionCommand}" />
            <Button Text="Trace" Command="{Binding ButtonTraceCommand}" />
            <Button Text="Debug" Command="{Binding ButtonDebugCommand}" />
            <Button Text="Info" Command="{Binding ButtonInfoCommand}" />
            <Button Text="Warn" Command="{Binding ButtonWarnCommand}" />
            <Button Text="Error" Command="{Binding ButtonErrorCommand}" />
            <Button Text="Fatal" Command="{Binding ButtonFatalCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>